{
  "description": "CartoLayer declarative example",
  "initialViewState": {
    "latitude": 0,
    "longitude": 0,
    "zoom": 1,
    "pitch": 0,
    "bearing": 0
  },
  "views": [
    {
      "@@type": "MapView",
      "controller": true,
      "mapStyle": "@@#CARTO_BASEMAP.POSITRON"
    }
  ],
  "layers": [
    {
      "@@type": "CartoLayer",
      "data": "TYPE A SQL QUERY OR A DATASET NAME",
      "type": "TYPE placeholder",
      "connection": "CONNECTION placeholder",
      "getLineColor": [255, 255, 255, 100],
      "getFillColor": [232, 133, 113],
      "pointRadiusMinPixels": 5,
      "lineWidthMinPixels": 1,
      "pickable": true
    }
  ]
}
