{
  "name": "@carto/viewer",
  "version": "1.0.3",
  "private": true,
  "homepage": "https://viewer.carto.com",
  "dependencies": {
    "@carto/react": "^1.0.0-beta5",
    "@loaders.gl/core": "2.3.11",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@reduxjs/toolkit": "^1.1.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "ace-builds": "^1.4.12",
    "brace": "^0.11.1",
    "deck.gl": "^8.4.0",
    "echarts": "^4.9.0",
    "echarts-for-react": "^2.0.16",
    "eslint-config-prettier": "^6.12.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.2",
    "history": "^5.0.0",
    "husky": "^4.3.0",
    "hygen": "^6.0.4",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "react": "^16.13.1",
    "react-ace": "^9.2.0",
    "react-app-rewired": "^2.1.6",
    "react-dom": "^16.13.1",
    "react-map-gl": "^5.2.8",
    "react-redux": "^7.1.3",
    "react-router-dom": "^6.0.0-beta.0",
    "react-scripts": "3.4.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint './src/**/*.{js,jsx}'",
    "lint:fix": "eslint './src/**/*.{js,jsx}' --fix",
    "format": "npx prettier --write \"**/*.+(js|jsx|json|css|md)\"",
    "hygen": "hygen",
    "predeploy": "npm run build",
    "deploy:staging": "cp .env.staging .env && react-scripts build && firebase use staging && firebase deploy",
    "deploy:prod": "cp .env.prod .env && react-scripts build && firebase use prod && firebase deploy",
    "deploy:dev": "react-scripts build && firebase use dev && firebase deploy"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|jsx)": [
      "yarn lint:fix",
      "git add"
    ],
    "*.+(js|jsx|json|css|md)": [
      "prettier --write",
      "git add"
    ]
  }
}
